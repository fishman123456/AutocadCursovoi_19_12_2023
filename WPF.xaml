<Window  x:Class="AutocadCursovoi_19_12_2023.WPF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutocadCursovoi_19_12_2023"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300" MinHeight="100" MinWidth="200"
        Title="Список блоков" 
        WindowStartupLocation="CenterScreen" SizeToContent="Width" Height="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="grid" Grid.ColumnSpan="3" Grid.RowSpan="3" Margin="5" Loaded="grid_Loaded" MouseUp="grid_MouseUp" VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="clear" Content="очистить список" Grid.Column="2" Grid.Row="3" Margin="3" FontSize="12" Click="clear_Click"></Button>
    </Grid>
</Window>
